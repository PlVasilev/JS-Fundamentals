<h1 class="titleForm">Edit existing advertisement</h1>
<form id="formEditAd" class="form">
    <div><input type="hidden" name="id" value="{{data.creatorId}}" /></div>
    <div><input type="hidden" name="publisher" value="{{data.creatorUN}}" /></div>
    <div>Title:</div>
    <div><input type="text" name="title" value="{{data.title}}" /></div>
    <div>Description:</div>
    <div><textarea name="description" rows="10">{{data.description}}</textarea></div>
    <div>Date Published:</div>
    <div><input type="date" name="datePublished" value="{{data.datePublished}}" /></div>
    <div>Price:</div>
    <div><input type="number" step="0.01" name="price" value="{{data.price}}" /></div>
    <div>Image:</div>
    <div><input type="text"  name="pictureUrl" value="{{data.imageUrl}}" /></div>
    <div><input type="button" id="buttonEditAd" value="Edit" /></div>
</form>